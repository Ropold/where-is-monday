<div class="container py-4">
  <div class="text-center my-5">
    <h4 style="font-weight: bold; font-size: 40px;">My Cats:</h4>
  </div>
  <div class="row justify-content-center">
    <% @cats.order(created_at: :desc).each do |cat| %>
      <div class="col-lg-6 col-md-12 mb-4">
        <div class="card-cat">
          <% if cat.photo.attached? %>
            <%= cl_image_tag cat.photo.key, height: 650, width: 850, crop: :fill %>
          <% end %>
          <div class="card-body">
            <h3 class="card-title"><%= cat.name %></h3>
            <p class="card-text"><%= cat.description %></p>

          </div>
        </div>
        <div class="d-flex justify-content-between mt-3 px-3">
            <%= link_to "Show me", cat_path(cat), class: "btn btn-secondary" %>
            <%= link_to "Edit", edit_cat_path(cat), class: "btn btn-secondary" %>
            <%= link_to "Delete", cat_path(cat), data: { turbo_method: :delete,  confirm: "Are you sure?" }, class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
