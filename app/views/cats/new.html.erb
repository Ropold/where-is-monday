<h1 style="text-align: center; color: gray;">New Lost Cat</h1>

<div class="cat-form-container">
  <%= simple_form_for @cat do |form| %>

    <div class="cat-form">
      <%= form.label :name, "Cats Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_area :description, class: "form-textarea" %>
      <%= form.label :race, "Race", class: "form-label" %>
      <%= form.text_field :race, class: "form-input" %>
      <%= form.label :eye_color, "Eye Color", class: "form-label" %>
      <%= form.text_field :eye_color, class: "form-input" %>
      <%= form.label :color, "Color", class: "form-label" %>
      <%= form.text_field :color, class: "form-input" %>
      <%= form.label :fur, "Fur", class: "form-label" %>
      <%= form.text_field :fur, class: "form-input" %>
      <%= form.label :origin_address, "Origin Address", class: "form-label" %>
      <%= form.text_field :origin_address, class: "form-input" %>
      <%= form.label :city, "Origin City", class: "form-label" %>
      <%= form.text_field :city, class: "form-input" %>
      <%= form.input :photo, as: :file%>


    </div>
      <%= form.label :found, "Found?", class: "form-label" %>
      <%= form.check_box :found, class: "form-checkbox" %>
    <div class="cat-form">
      <%= form.submit "Submit Report", class: "form-submit" %>
    </div>
  <% end %>
</div>
<%= link_to "Back to home", root_path, class: "back-link" %>
