<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2015/03/27/13/16/maine-coon-694730_960_720.jpg);">
  <div class="container text-center">
    <h1>Where is Monday - will help you</h1>
    <p>to find your cat!</p>


    <%= form_with url: cats_path, method: :get, local: true, class: "search-form mt-4" do %>
      <div class="form-group">
        <%= label_tag :query, "Search by city", class: "form-label text-white" %>
        <%= text_field_tag :query, params[:query], placeholder: "Enter city", class: "form-control w-50" %>
      </div>
      <%= submit_tag "Search", class: "btn btn-primary mt-2" %>
    <% end %>
  </div>
</div>

<div class="container py-4">
  <div class="row">
    <% @cats.first(4).each do |cat| %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card-cat">
          <img src="https://i.pinimg.com/originals/02/ba/16/02ba16758c177bb63c81b022b82e480c.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h3 class="card-title"><%= cat.name %></h3>
            <p class="card-text"><%= cat.description %></p>
            <%= link_to "Find me", cat_path(cat), class: "btn btn-warning" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @cats.select { |cat| cat.found? }.first(4).each do |cat| %>
      <div class="col-lg-6 col-md-6 col-sm-6 mb-4">
        <div class="card-cat">
          <img src="https://i.pinimg.com/originals/02/ba/16/02ba16758c177bb63c81b022b82e480c.jpg" alt="">
          <div class="card-content">
            <h2><%= cat.name %></h2>
            <p>xercitationem iste, voluptatum, quia explicabo laboriosam rem adipisci voluptates cumque, veritatis atque nostrum corrupti ipsa asperiores harum? Dicta odio aut hic.</p>
            <a href="#" class="button">Find out more<span class="material-symbols-outlined">arrow_right_alt</span></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
