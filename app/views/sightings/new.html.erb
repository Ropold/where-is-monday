<h1>New Sighting</h1>

<%= form_with(model: @sighting, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :longitude, "Longitude" %>
    <%= form.number_field :longitude, step: 'any', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :latitude, "Latitude" %>
    <%= form.number_field :latitude, step: 'any', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city, "City" %>
    <%= form.text_field :city, rows: 4, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_seen_at, "Last Seen At" %>
    <%= form.datetime_select :last_seen_at, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address, "Address" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <%= form.label :cat_id, "Cat" %>
    <%= form.collection_select :cat_id, Cat.all, :id, :name, { include_blank: "Select a cat" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Sighting", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', sightings_path, class: "btn btn-secondary" %>
